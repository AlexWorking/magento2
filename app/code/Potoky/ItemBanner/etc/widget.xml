<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Potoky\ItemBanner\Block\Widget\Banner" id="potoky_itembanner_widget">
        <label>Banner inserted into products</label>
        <description>Depending on set position appears in place of a product block in the product list or grid</description>
        <parameters>
            <parameter name="is_active" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label>Is This Banner Active</label>
            </parameter>
            <parameter name="image" xsi:type="block" visible="true">
                <label translate="true">Image</label>
                <description translate="true">Image For Banner</description>
                <block class="Potoky\ItemBanner\Block\Adminhtml\Image">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>

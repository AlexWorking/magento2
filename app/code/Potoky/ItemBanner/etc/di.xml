<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="testbedCommand" xsi:type="object">Potoky\ItemBanner\Command\Testbed</item>
            </argument>
        </arguments>
    </type>
    <type name="Potoky\ItemBanner\Controller\Adminhtml\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Potoky\ItemBanner\ImageUpload</argument>
        </arguments>
    </type>
    <virtualType name="Potoky\ItemBanner\ImageUpload" type="Potoky\ItemBanner\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">itembanner</argument>
            <argument name="basePath" xsi:type="string">itembanner</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
            <argument name="allowedMimeTypes" xsi:type="array">
                <item name="jpg" xsi:type="string">image/jpg</item>
                <item name="jpeg" xsi:type="string">image/jpeg</item>
                <item name="gif" xsi:type="string">image/gif</item>
                <item name="png" xsi:type="string">image/png</item>
            </argument>
        </arguments>
    </virtualType>
</config>
